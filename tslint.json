{
	"extends": "tslint:recommended",
	"rules": {
		"interface-over-type-literal": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"experimentalDecorators": true,
		"max-line-length": {
			"options": [
				120
			],
			"severity": "warning"
		},
		"indent": [
			true,
			"spaces", 4
		],
		"quotemark": [
			true,
			"single"
		],
		"linebreak-style": [
			true,
			"LF"
		],
		"trailing-comma": [
			true,
			{
				"multiline": "always",
				"singleline": "never"
			}
		]
	}
}
